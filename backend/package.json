{
  "name": "api-node",
  "version": "1.0.0",
  "description": "API Node.js pour Raspberry Pi",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --env-file .env.development src/server.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "start-db": "docker compose -f docker-compose.dev.yml up -d",
    "stop-db": "docker compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.22",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
